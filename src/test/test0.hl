MAKE_PROGRAMMING

greeting = "Howdy";
name = "Partner";
HOLLER greeting " " name;

IF_YALL (greeting == "Howdy") {
  HOLLER "Yeehaw!";
  WHILE_YALL (name == "Partner") {
    HOLLER "I am inside the IF...";
    name = "Cowboy";
  }
} ELSE_YALL {
  HOLLER "This is ELSE statement!";
}

WHILE_YALL (name == "Cowboy") {
  HOLLER "Still riding...";
  name = "Not";
}

GREAT_AGAIN